<% title "图片素材" %>
<% page_header "图片管理" %>

<div class='group-header group-header-first'>
  <div class='row'>
    <div class='col-sm-6 col-sm-offset-3'>
      <div class='text-center'>
        <%= link_to '添加图片', new_picture_path, class: 'btn btn-lg btn-primary' %>
        <%= link_to '添加图片夹', new_gallery_path, class: 'btn btn-lg btn-success' %>
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <% @galleries.each do |gallery| %>
    <div class='col-sm-3 col-xs-4 col-md-2'>
      <%= link_to gallery.name, gallery %>
    </div>
  <% end %>
</div>
<hr/>

<%= render partial: 'list', locals: {pictures: @pictures} %>
