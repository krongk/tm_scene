<h1>Listing pictures</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Gallery</th>
      <th>Name</th>
      <th>Key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.user %></td>
        <td><%= picture.gallery %></td>
        <td><%= picture.name %></td>
        <td><%= picture.key %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '添加相册', new_gallery_path, class: 'btn btn-lg btn-primary' %>
<%= link_to '添加图片', new_picture_path, class: 'btn btn-lg btn-primary' %>
