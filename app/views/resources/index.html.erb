<% title "资源列表" %>
<% page_header "资源管理" %>

<div class='group-header group-header-first'>
  <div class='row'>
    <div class='col-sm-6 col-sm-offset-3'>
      <div class='text-center'>
        <%= link_to '添加音乐', new_resource_path(typo: '音乐'), class: 'btn btn-lg btn-primary' %>
        <%= link_to '添加视频', new_resource_path(typo: '视频'), class: 'btn btn-lg btn-success' %>
      </div>
    </div>
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>类型</th>
      <th>名称</th>
      <th>链接</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.typo %></td>
        <td><%= resource.name %></td>
        <td><%= resource.asset.url %></td>
        <td><%= link_to '试听', resource_path(resource) %></td>
        <td><%= link_to '替换', edit_resource_path(resource) %></td>
        <td><%= link_to '删除', resource, method: :delete, data: { confirm: '确定要删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
