<%= simple_form_for(@site_section) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :site_id, as: :hidden, input_html: {value: @site.id } %>
    <%= f.input :section_id, as: :hidden, input_html: {value: @section.id } %>
    <%= f.input :position %>
  </div>
  <%= render inline: @section.form %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
